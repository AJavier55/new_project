<% if flash[:my_errors]%>
<%flash[:my_errors].each do |error|%>
<p><%= error %></p>
<%end%>
<%end%>

<h1>New Wholesaler</h1>
div class="d-flex align-content-center">
  <div class="row justify-content-center">
    <div class="col-6" style="background-color:lavender;">
<%= bootstrap_form_for @wholesaler do |f|%>
<%= f.label :name %>
<%= f.text_field :name%>
<%= f.label :location %>
<%= f.text_field :location%>
<%= f.label "Business Type" %>
<%= f.text_field :occupation%>
<p>Choose or enter a product</p>

  <%f.label "Enter Product Name"%>
  <%= f.fields_for  :wholesaler_products do |products_fields| %>
   <%= products_fields.collection_select :product_id, Product.all, :id, :name %>
  <% end %>
  <%= f.submit %>
<%end%>
</div>
</div>
</div>



