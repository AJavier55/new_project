
<% if flash[:review_errors]%>
<% flash[:review_errors].each do |error|%>
<p><%= error %></p>
<%end%>
<%end%>

<%= form_for @review do |f|%>
 <%= f.label @current_restaurant.name%><br>
<%= f.hidden_field :restaurant_id, value: @current_restaurant.id%>
 <%= f.label :wholesaler_id%><br>
 <%= f.collection_select :wholesaler_id, Wholesaler.all, :id, :name%><br>
 <br>
<%= f.label :star_rating%>
<%= f.number_field :star_rating%><br>
<br>
<%= f.label :written_review%>
<%= f.text_field :written_review%><br>
<br>
<%= f.submit%>
<%end%>

<h3>Don't see your wholesaler? Create a new one and give them a review! <%=link_to "New Wholesaler", new_wholesaler_path%>